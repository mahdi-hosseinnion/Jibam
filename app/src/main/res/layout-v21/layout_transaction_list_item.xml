<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <import type="android.graphics.Color" />

        <import type="java.math.BigDecimal" />

        <variable
            name="viewmodel"
            type="com.ssmmhh.jibam.presentation.transactions.TransactionsViewModel" />

        <variable
            name="item"
            type="com.ssmmhh.jibam.data.model.Transaction" />

        <variable
            name="isNextItemHeader"
            type="Boolean" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/root_transaction_item"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:onClick="@{(view) -> viewmodel.openDetailScreenFor(item.id)}"
        android:paddingLeft="8dp"
        android:paddingRight="8dp">


        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="12dp"

            android:layout_marginBottom="8dp"
            android:foregroundGravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/linear"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            card_view:cardBackgroundColor="@{Color.parseColor(item.categoryImage.backgroundColor)}"
            card_view:cardCornerRadius="20dp">

            <ImageView
                android:id="@+id/category_image"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:elevation="2dp"
                android:scaleType="center"
                app:loadWithResourceId="@{item.categoryImage.getImageResourceId(context)}" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/price"
            app:layout_constraintStart_toEndOf="@+id/cardView"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/main_text"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center|start"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_weight="70"
                android:gravity="center|start"
                android:maxLines="1"
                android:padding="4dp"
                android:paddingTop="8dp"
                android:textColor="#1E1E1E"
                android:textSize="16sp"
                android:textStyle="bold"
                app:alternativeText="@{item.getCategoryNameFromStringFile(context)}"
                app:preferredText="@{item.memo}"
                tools:text="Food" />

        </LinearLayout>

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="8dp"
            android:foregroundGravity="center"
            android:gravity="center|end"
            android:padding="4dp"
            android:textColor="@{(item.money.compareTo(BigDecimal.ZERO) == 1 ) ? @color/blue_500 : @color/red_500}"
            android:textSize="16sp"
            android:textStyle="bold"
            app:groupNumberByThreeThenSetAsText="@{item.money}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/linear"
            app:layout_constraintTop_toTopOf="parent"
            card_view:cardCornerRadius="8dp"
            tools:text="-$5,000" />

        <View
            android:id="@+id/transaction_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="4dp"
            android:background="#EBEBEB"
            android:visibility="@{isNextItemHeader ? View.GONE : View.VISIBLE }"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>