<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="end"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/month_manager_previous"
        app:srcCompat="@drawable/ic_round_navigate_before_24"
        app:tint="@color/black"
        android:layout_width="48dp"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:padding="8dp" />

    <TextView
        android:id="@+id/toolbar_month"
        tools:text="May"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:gravity="center"
        android:textColor="#00141E"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/month_manager_next"
        app:srcCompat="@drawable/ic_round_navigate_next_24"
        app:tint="@color/black"
        android:layout_width="48dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:padding="8dp" />
</LinearLayout>