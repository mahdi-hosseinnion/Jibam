<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.main.transaction.ViewCategoriesFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/viewCategoriesToolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mtrl_toolbar_default_height"
        android:background="@color/purple_500" />

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager_viewCategories"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </androidx.viewpager2.widget.ViewPager2>

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/add_new_appbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_bar_size"
        android:background="@color/white"
        android:clickable="true"
        android:focusable="true"
        app:liftOnScroll="false">

        <TextView
            android:id="@+id/adfasdf"
            android:background="#123453"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:clickable="true"
            android:drawablePadding="0dp"
            android:focusable="true"
            android:gravity="center"
            android:paddingStart="28dp"
            android:paddingEnd="28dp"
            android:text="@string/add_new_category"
            android:textSize="16sp"
            app:drawableStartCompat="@android:drawable/ic_input_add"
            app:drawableTint="@android:color/secondary_text_light" />
    </com.google.android.material.appbar.AppBarLayout>


</LinearLayout>