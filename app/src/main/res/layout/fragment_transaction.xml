<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6E6E6"
    tools:context=".ui.main.transaction.TransactionFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:weightSum="100">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_main"
            android:layout_width="match_parent"
            android:layout_height="@dimen/mtrl_toolbar_default_height"
            android:background="@color/purple_500" />

        <TextView
            android:id="@+id/txt_balance"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:textColor="#1E88E5" />

        <TextView
            android:id="@+id/txt_income"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:textColor="#43A047" />

        <TextView
            android:id="@+id/txt_expenses"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:textColor="#D81B60" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/main_standardBottomSheet"
        style="?attr/bottomSheetStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_sheet_bg"
        android:orientation="vertical"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">
        <!--        <androidx.core.widget.NestedScrollView-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:scrollbars="vertical"-->

        <!--            android:layout_height="match_parent">-->
        <View
            android:id="@+id/view_hastam"
            android:layout_width="32dp"
            android:layout_height="6dp"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:background="#CFCFCF" />

        <TextView
            android:id="@+id/lastTransaction"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_gravity="center"
            android:gravity="start|center"
            android:padding="4dp"
            android:paddingStart="8dp"
            android:text="Last Transactions"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:id="@+id/bottom_sheet_toolbar"
            android:visibility="gone"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/main_bottom_sheet_back_arrow"
                android:layout_width="@dimen/action_bar_size"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:clickable="true"
                android:focusable="true"
                android:tint="@color/black"
                android:visibility="visible"
                app:srcCompat="@drawable/abc_vector_test" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="start|center"
                android:padding="4dp"
                android:text="Last Transactions"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/main_bottom_sheet_search_btn"
                android:layout_width="@dimen/action_bar_size"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:clickable="true"
                android:focusable="true"
                android:tint="@color/black"
                android:visibility="visible"
                app:srcCompat="@android:drawable/ic_menu_search" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/transaction_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <!--        </androidx.core.widget.NestedScrollView>-->

    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_gravity="center|top"
        android:layout_marginTop="32dp"
        android:background="@color/white"
        android:visibility="invisible" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_margin="16dp"
        android:contentDescription="@string/create_new_transaction"
        android:src="@android:drawable/ic_input_add" />


</androidx.coordinatorlayout.widget.CoordinatorLayout>