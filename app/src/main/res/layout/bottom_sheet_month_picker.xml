<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:orientation="vertical">

    <TextView
        android:id="@+id/back_to_current_month_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:drawablePadding="8dp"
        android:padding="8dp"
        android:text="@string/back_to_current_month"
        android:textSize="20sp"
        app:drawableLeftCompat="@drawable/ic_round_settings_backup_restore_24"
        app:drawableStartCompat="@drawable/ic_round_settings_backup_restore_24" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:orientation="horizontal">

        <NumberPicker
            android:id="@+id/yearNumberPicker"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="50"
            app:layout_constraintTop_toTopOf="parent" />

        <NumberPicker
            android:id="@+id/monthNumberPicker"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="5"
            app:layout_constraintHorizontal_weight="@+id/yearNumberPicker"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_weight="50" />
    </LinearLayout>

    <Button
        android:id="@+id/confirm_monthPicker"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_margin="8dp"
        android:clickable="true"
        android:focusable="true"
        android:text="@string/confirm" />

</LinearLayout>