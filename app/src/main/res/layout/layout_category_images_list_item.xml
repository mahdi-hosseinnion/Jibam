<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewmodel"
            type="com.ssmmhh.jibam.presentation.categories.addcategoires.AddCategoryViewModel" />

        <variable
            name="item"
            type="com.ssmmhh.jibam.data.source.local.entity.CategoryImageEntity" />

        <variable
            name="position"
            type="Integer" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:onClick="@{(view) -> viewmodel.setCategoryImage(item, position)}">

        <FrameLayout
            android:id="@+id/category_images_frame"
            android:layout_width="match_parent"
            android:layout_height="0dp"

            android:background="@drawable/shape_category_item_circle"
            app:layout_constraintDimensionRatio="H,1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"

            app:layout_constraintTop_toTopOf="parent">


            <ImageView
                android:id="@+id/category_images"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:padding="12dp"
                app:loadWithResourceId="@{item.getCategoryImageResourceId(context)}"
                android:scaleType="center"
                app:tint="@color/black" />

        </FrameLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
