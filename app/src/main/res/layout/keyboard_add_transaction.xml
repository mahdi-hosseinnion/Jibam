<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/calcutor_bottom_sheet_bg"
        android:orientation="horizontal"
        android:paddingTop="6dp"
        android:paddingRight="2dp"
        android:paddingBottom="4dp"
        android:paddingLeft="2dp"
        android:weightSum="100">

        <!--                android:background="#f9f9f9"-->
        <LinearLayout

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_clearAll"
                style="@style/calcutorTextViewStyle"
                android:layout_weight="20"
                android:text="C" />


            <Button
                android:id="@+id/btn_7"
                style="@style/calcutorTextViewStyle"


                android:text="@string/_7" />

            <Button
                android:id="@+id/btn_4"
                style="@style/calcutorTextViewStyle"

                android:text="@string/_4" />

            <Button
                android:id="@+id/btn_1"
                style="@style/calcutorTextViewStyle"

                android:text="@string/_1" />

            <Button
                android:id="@+id/btn_00"
                style="@style/calcutorTextViewStyle"

                android:text="@string/_00" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_division"
                style="@style/calcutorTextViewStyle"

                android:layout_weight="20"
                android:text="รท" />

            <Button
                android:id="@+id/btn_8"
                style="@style/calcutorTextViewStyle"

                android:text="@string/_8" />


            <Button
                android:id="@+id/btn_5"
                style="@style/calcutorTextViewStyle"

                android:text="@string/_5" />

            <Button
                android:id="@+id/btn_2"
                style="@style/calcutorTextViewStyle"

                android:text="@string/_2" />

            <Button
                android:id="@+id/btn_0"
                style="@style/calcutorTextViewStyle"

                android:text="@string/_0" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_times"
                style="@style/calcutorTextViewStyle"
                android:layout_weight="20"


                android:text="ร" />

            <Button
                android:id="@+id/btn_9"
                style="@style/calcutorTextViewStyle"

                android:text="@string/_9" />

            <Button
                android:id="@+id/btn_6"
                style="@style/calcutorTextViewStyle"

                android:text="@string/_6" />

            <Button
                android:id="@+id/btn_3"
                style="@style/calcutorTextViewStyle"

                android:text="@string/_3" />

            <Button
                android:id="@+id/btn_period"
                style="@style/calcutorTextViewStyle"

                android:text="." />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_c"
                style="@style/calcutorTextViewStyle"
                android:layout_weight="20"
                android:gravity="center"
                android:foregroundGravity="center"
                app:icon="@drawable/ic_delete_keyboard"
                app:iconTint="@color/black" />


            <Button
                android:id="@+id/btn_mines"
                style="@style/calcutorTextViewStyle"

                android:text="-" />

            <Button
                android:id="@+id/btn_plus"
                style="@style/calcutorTextViewStyle"

                android:text="+" />

            <Button
                android:id="@+id/btn_equal"
                style="@style/calcutorTextViewStyle"
                android:layout_weight="42"
                android:text="=" />
        </LinearLayout>

    </LinearLayout>
</merge>